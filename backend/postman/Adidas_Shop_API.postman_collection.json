{
  "info": {
    "name": "Adidas Shop API",
    "description": "API Collection cho website bán giày Adidas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            },
            "description": "Lấy danh sách tất cả sản phẩm"
          }
        },
        {
          "name": "Get Product By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1"]
            },
            "description": "Lấy thông tin sản phẩm theo ID"
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Adidas NMD R1\",\n  \"price\": 3200000,\n  \"category\": \"lifestyle\",\n  \"image\": \"https://assets.adidas.com/images/h_840,f_auto,q_auto,fl_lossy,c_fill,g_auto/nmd_r1.jpg\",\n  \"description\": \"Giày lifestyle NMD R1 với thiết kế hiện đại\",\n  \"stock\": 45\n}"
            },
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            },
            "description": "Tạo sản phẩm mới"
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Adidas Ultraboost 22 Updated\",\n  \"price\": 4800000,\n  \"stock\": 45\n}"
            },
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1"]
            },
            "description": "Cập nhật thông tin sản phẩm"
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/13",
              "host": ["{{base_url}}"],
              "path": ["products", "13"]
            },
            "description": "Xóa sản phẩm theo ID"
          }
        },
        {
          "name": "Get Products By Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/category/running",
              "host": ["{{base_url}}"],
              "path": ["products", "category", "running"]
            },
            "description": "Lấy sản phẩm theo danh mục (running, football, lifestyle, basketball)"
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/products/search?q=ultraboost",
              "host": ["{{base_url}}"],
              "path": ["products", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "ultraboost"
                }
              ]
            },
            "description": "Tìm kiếm sản phẩm theo từ khóa"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cart?customer_id=1",
              "host": ["{{base_url}}"],
              "path": ["cart"],
              "query": [
                {
                  "key": "customer_id",
                  "value": "1"
                }
              ]
            },
            "description": "Lấy giỏ hàng của khách hàng"
          }
        },
        {
          "name": "Add To Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": 1,\n  \"quantity\": 2,\n  \"customer_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/cart",
              "host": ["{{base_url}}"],
              "path": ["cart"]
            },
            "description": "Thêm sản phẩm vào giỏ hàng"
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3,\n  \"customer_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/cart/1",
              "host": ["{{base_url}}"],
              "path": ["cart", "1"]
            },
            "description": "Cập nhật số lượng sản phẩm trong giỏ hàng"
          }
        },
        {
          "name": "Remove From Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cart/1?customer_id=1",
              "host": ["{{base_url}}"],
              "path": ["cart", "1"],
              "query": [
                {
                  "key": "customer_id",
                  "value": "1"
                }
              ]
            },
            "description": "Xóa sản phẩm khỏi giỏ hàng"
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/cart?customer_id=1",
              "host": ["{{base_url}}"],
              "path": ["cart"],
              "query": [
                {
                  "key": "customer_id",
                  "value": "1"
                }
              ]
            },
            "description": "Xóa toàn bộ giỏ hàng"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": 1,\n  \"items\": [\n    {\n      \"product\": {\n        \"id\": 1,\n        \"name\": \"Adidas Ultraboost 22\",\n        \"price\": 4500000\n      },\n      \"quantity\": 2\n    }\n  ],\n  \"total\": 9000000\n}"
            },
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Tạo đơn hàng mới"
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders",
              "host": ["{{base_url}}"],
              "path": ["orders"]
            },
            "description": "Lấy danh sách tất cả đơn hàng"
          }
        },
        {
          "name": "Get Orders By Customer",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/orders?customer_id=1",
              "host": ["{{base_url}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "customer_id",
                  "value": "1"
                }
              ]
            },
            "description": "Lấy đơn hàng theo khách hàng"
          }
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/stats",
              "host": ["{{base_url}}"],
              "path": ["stats"]
            },
            "description": "Lấy thống kê tổng quan"
          }
        }
      ]
    }
  ]
}
